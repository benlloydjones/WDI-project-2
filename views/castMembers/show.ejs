<div class="container">
  <div class="box">
    <div class="columns is-multiline-mobile">
      <div class="column is-half-desktop is-12-mobile">
        <img src="<%= castMember.image %>" alt="<%= castMember.firstname %> <%= castMember.lastname %>">
      </div>
      <div class="column is-half-desktop is-12-mobile">
        <h2 class="title is-2"><%= castMember.firstname %> <%= castMember.lastname %></h2>
        <% episodes.forEach(episode => { %>
          <p><a href="/episodes/<%= episode.id %>"><%= episode.title %></a></p>
        <% }) %>
      </div>
    </div>
  </div>
</div>
