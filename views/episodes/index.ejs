<div class="container">
  <h1 class="title is-1">Star Trek Episodes</h1>
  <p class="subtitle is-3">These are all the Star Trek episodes we have listed</p>
  <div class="columns is-multiline">
    <% episodes.forEach((episode => { %>
      <div class="column is-one-third-desktop is-one-half-mobile">
        <div class="box">
            <a href="/episodes/<%= episode.id %>"><img class="episodes image" src="<%= episode.image %>" alt="<%= episode.title %>"></a>
          <a href="/episodes/<%= episode.id %>"><h2 class="title is-4"><%= episode.title %></h2></a>
        </div>
      </div>
    <% })) %>
  </div>
</div>
